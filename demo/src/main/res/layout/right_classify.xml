<?xml version="1.0" encoding="utf-8"?>
<me.jessyan.art.widget.autolayout.AutoCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="550px"
    android:layout_marginBottom="15px"
    android:layout_marginTop="35px"
    android:layout_marginLeft="10px">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:orientation="vertical">

        <ImageView

            android:id="@+id/classify_iv_avatar"
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:scaleType="centerCrop"
            tools:src="#000000" />

        <TextView
            android:id="@+id/classify_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20px"
            android:layout_marginStart="20px"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:paddingTop="10px"
            android:textColor="@color/black"
            android:textSize="30px"
            tools:text="" />


    </LinearLayout>


</me.jessyan.art.widget.autolayout.AutoCardView>